Name:		matasano
Version:	0.1.0
Synopsis:	A Haskell implementation of the Matasano Crypto Challenges
Description:    A Haskell implementation of the Matasano Crypto Challenges
License:    	BSD3
License-File:	LICENSE
Author:		Carlos Valiente
Maintainer:	Carlos Valiente <carlos@pepelabs.net>
Copyright:	Copyright (c) 2013, Carlos Valiente
Category:	Data
Stability:	Experimental
Build-Type:	Simple
Cabal-Version:	>= 1.8
Tested-With:	GHC==7.6.3

Source-Repository head
  Type:     git
  Location: git@code.pepelabs.net:carlos/matasano.git
  SubDir:   matasano

Library
  Build-Depends:	base == 4.6.*,
                        bytestring == 0.10.*,
                        base16-bytestring == 0.1.*,
                        base64-bytestring == 1.0.*,
                        containers == 0.5.*
  Exposed-Modules:	Matasano
  HS-Source-Dirs:	src
  ghc-options:		-Wall

Executable problem-1-1
  Build-Depends:        base == 4.6.*,
                        matasano
  Main-Is:		problems/problem-1-1.hs
  ghc-options:		-Wall

Executable problem-1-2
  Build-Depends:        base == 4.6.*,
                        matasano
  Main-Is:		problems/problem-1-2.hs
  ghc-options:		-Wall

Executable problem-1-3
  Build-Depends:        base == 4.6.*,
                        bytestring == 0.10.*,
                        matasano
  Main-Is:		problems/problem-1-3.hs
  ghc-options:		-Wall
